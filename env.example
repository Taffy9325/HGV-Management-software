# Environment Variables Template

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# DVLA API Configuration (Optional - for production)
DVLA_API_KEY=your_dvla_api_key

# Database Configuration (Optional - for local development)
DATABASE_URL=postgresql://username:password@localhost:5432/hgv_compliance

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# External API Keys (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TOMTOM_API_KEY=your_tomtom_api_key

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Application Configuration
NODE_ENV=development
PORT=3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number